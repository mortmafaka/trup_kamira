<?xml version="1.0" encoding="UTF-8"?>
<payment-gateway-schema>
  <gateway-name>Example Payment Gateway</gateway-name>
  <payment-methods>
    <payment-method>
      <name>Credit Card</name>
      <fields>
        <field>
          <name>card_number</name>
          <type>string</type>
          <description>The credit card number</description>
          <required>true</required>
        </field>
        <field>
          <name>cardholder_name</name>
          <type>string</type>
          <description>The name on the credit card</description>
          <required>true</required>
        </field>
        <field>
          <name>expiration_date</name>
          <type>date</type>
          <description>The expiration date of the credit card</description>
          <required>true</required>
        </field>
        <field>
          <name>cvc</name>
          <type>string</type>
          <description>The CVC code on the back of the credit card</description>
          <required>true</required>
        </field>
      </fields>
    </payment-method>
    <payment-method>
      <name>Bank Transfer</name>
      <fields>
        <field>
          <name>account_number</name>
          <type>string</type>
          <description>The bank account number</description>
          <required>true</required>
        </field>
        <field>
          <name>routing_number</name>
          <type>string</type>
          <description>The routing number of the bank</description>
          
          <required>true</required>
        </field>
        <field>
          <name>account_holder_name</name>
          <type>string</type>
          <description>The name on the bank account</description>
          <required>true</required>
        </field>
      </fields>
    </payment-method>
  </payment-methods>
  <process-flow>
    <step>
      <name>Initialize Payment</name>
      <description>Initiates the payment process and generates a payment request</description>
      <input-params>
        <param>
          <name>payment_amount</name>
          <type>decimal</type>
          <description>The amount of the payment</description>
          <required>true</required>
        </param>
        <param>
          <name>payment_method</name>
          <type>string</type>
          <description>The payment method selected by the user</description>
          <required>true</required>
        </param>
      </input-params>
      <output-params>
        <param>
          <name>payment_request</name>
          <type>string</type>
          <description>The payment request generated by the payment gateway</description>
          <required>true</required>
        </param>
      </output-params>
    </step>
    <step>
      <name>Process Payment</name>
      <description>Processes the payment and returns the status of the payment</description>
      <input-params>
        <param>
          <name>payment_request</name>
          <type>string</type>
          <description>The payment request generated by the payment gateway</description>
          <required>true</required>
        </param>
      </input-params>
      <output-params>
        <param>
          <name>payment_status</name>
          <type>string</type>
<description>The status of the payment (e.g. "success", "failure")</description>
<required>true</required>
</param>
</output-params>
</step>
</process-flow>
</payment-gateway-schema>
